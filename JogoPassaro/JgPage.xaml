<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JogoPassaro.JgPage">



    <Grid>
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnGridClicked"/>
        </Grid.GestureRecognizers>

        <Image
            x:Name="FundoImg"
            Source="fundo.png"
            Opacity=".8"
            Aspect="Fill"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"/>

        <Image
            x:Name="imgpassaro"
            Source="passaro.png"
            WidthRequest="60"
            HeightRequest="90"
            Margin="20,20,20,20"
            VerticalOptions="Center"
            HorizontalOptions="Start"/>

        <Image
            x:Name="CanoDeBaixo"
            Source="chao.png"
            WidthRequest="500"
            HeightRequest="300"
            VerticalOptions="End"
            HorizontalOptions="End"
            Margin="0,0,0,20"/>

        <Image
            x:Name="CanoDeCima"
            Source="ceu.png"
            WidthRequest="500"
            HeightRequest="300"
            VerticalOptions="Start"
            HorizontalOptions="End"
            Margin="0, 0, 0, 0"/>

        <Label x:Name="LabelScore"
               VerticalOptions="Start"
               HorizontalOptions="End"/>

        <Frame x:Name="FrameGameOver"
               BackgroundColor="#99000000"
               HorizontalOptions="Fill"
               VerticalOptions="Fill">

            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnGameOverClicked"/>
            </Frame.GestureRecognizers>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Source="gameover.png"
                       HeightRequest="140"
                       WidthRequest="160"
                       Grid.Row="2"/>
                <Frame Grid.Row="1"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>

                    <Label Text="VocÃª passou por 0 canos"
                           x:Name="LabelCanos"
                           Grid.Column="1"
                           Grid.Row="4"/>
                </Frame>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>
    