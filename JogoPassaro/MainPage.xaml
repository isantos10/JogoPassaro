<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JogoPassaro.MainPage"
            Shell.NavBarIsVisible="False">

     <Grid>
       <Image Source="capajogo.png"
              Aspect="AspectFill"/>

       <Label Text="SKY EXPLORER"
              TextColor="#34cceb"
              Margin="20,170,20,0"
              FontSize="30"
              LineHeight="1.5"
              HorizontalOptions="Center"
              HorizontalTextAlignment="Center"
              VerticalOptions="Center"/>

       <VerticalStackLayout
              VerticalOptions="End"
              Spacing="15"
              Margin="15,0,15,40"/>

  <Button  Text="Iniciar"
           Clicked="BotaoIniciar"
           HeightRequest="50"
           CornerRadius="25"
           BackgroundColor="#34cceb"
           TextColor="White"
           BorderWidth="1"
           BorderColor="White"
           Margin="0,0,0,10"
           FontSize="18"
           VerticalOptions="End"/>
 </Grid>
</ContentPage>
           


